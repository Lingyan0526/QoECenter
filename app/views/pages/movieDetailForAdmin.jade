extends ../layoutGl.jade

block content
    .row
            h2.darkbule Video Information
            form#UpdateMovieInfo.form-horizontal(method="post",action="/gl/movie/update/#{movie._id}")
              //- input(type="hidden",name="movie[_id]",value="#{movie._id}")
              .form-group
                h4.darkbule.col-sm-2.control-label(for="inputTitle") Video Name
                .col-sm-4.pull-left
                  input#inputTitle.form-control(type="text",name="movie[title]",value="#{movie.title}")
              //- .form-group
              //-   label.col-sm-2.control-label(for="inputCates") 视频类别
              //-   .col-sm-6
              //-     input#inputCates.form-control(type="text",name="mCates[title]",value="#{mCates.title}")
              .form-group
                br
                .col-sm-12
                  legend
                h3.darkbule.col-sm-3.control-label(style="border-left:0.5px solid #000;") Content Attributes :
              .form-group.raw
                h4.darkbule.col-sm-2.control-label Video Type
                .col-sm-3
                  input#inputTimedelay.form-control(readonly="readonly" type="text",name="commentInfo[clarity]",value="#{movie.catesName}")
                h4.darkbule.col-sm-2.control-label(for="inputPacketloss") Euclidean Distance
                .col-sm-3
                  input#inputPacketloss.form-control(readonly="readonly" type="text",name="movie[edistance]",value="#{movie.edistance}")
              .form-group
                h4.darkbule.col-sm-2.control-label(for="inputTimedelay") ti
                .col-sm-3
                  input#inputTimedelay.form-control(readonly="readonly" type="text",name="commentInfo[loadSpeed]",value="#{movie.ti}")
                h4.darkbule.col-sm-2.control-label(for="inputPacketloss") si
                .col-sm-3
                  input#inputPacketloss.form-control(readonly="readonly" type="text",name="commentInfo[quality]",value="#{movie.si}")

              .form-group.raw
                h4.darkbule.col-sm-2.control-label(for="inputTimedelay") pv
                .col-sm-3
                  input#inputTimedelay.form-control(readonly="readonly" type="text",name="commentInfo[loadSpeed]",value="#{movie.pv}")
                h4.darkbule.col-sm-2.control-label(for="inputBandwidth") SetupTime
                .col-sm-3
                  input#inputTimedelay.form-control(readonly="readonly" type="text",name="commentInfo[clarity]",value="#{moment(movie.meta.createAt.toString()).format('YYYY/MM/DD HH:mm:ss')}")         
         
              .form-group
                br
                .col-sm-12
                  legend
                h3.darkbule.col-sm-3.control-label(style="border-left:0.5px solid #000;") Network Parameters :
              .form-group.raw          
                h4.darkbule.col-sm-2.control-label(for="inputPreload") Setup Latency
                .col-sm-3
                  input#inputPreload.form-control(type="text",name="movie[showdelay]",value="#{movie.showdelay}", placeholder="")

              .form-group
                br
                .col-sm-12
                  legend
                h3.darkbule.col-sm-3.control-label(style="border-left:0.5px solid #000;") Video Attributes :
              .form-group.raw          
                h4.darkbule.col-sm-2.control-label(for="inputMVheight") Duration
                .col-sm-3
                  input#inputMVheight.form-control(readonly="readonly" type="text",value="#{movie.duration}", placeholder="")
                h4.darkbule.col-sm-2.control-label(for="inputMVheight") Size
                .col-sm-3
                  input#inputMVheight.form-control(readonly="readonly" type="text",value="#{movie.size}", placeholder="")
              .form-group.raw          
                h4.darkbule.col-sm-2.control-label(for="inputMVheight") Width
                .col-sm-3
                  input#inputMVheight.form-control(readonly="readonly" type="text",value="#{movie.width}", placeholder="")
                h4.darkbule.col-sm-2.control-label(for="inputMVheight") Height
                .col-sm-3
                  input#inputMVheight.form-control(readonly="readonly" type="text",value="#{movie.height}", placeholder="")
              .form-group.raw          
                h4.darkbule.col-sm-2.control-label(for="inputMVheight") Frame Rate
                .col-sm-3
                  input#inputMVheight.form-control(readonly="readonly" type="text",value="#{movie.fps}", placeholder="")
                h4.darkbule.col-sm-2.control-label(for="inputMVheight") Bit Rate
                .col-sm-3
                  input#inputMVheight.form-control(readonly="readonly" type="text",value="#{movie.bps}", placeholder="")
              .form-group.raw          
                h4.darkbule.col-sm-2.control-label(for="inputMVheight") Codec Name
                .col-sm-3
                  input#inputMVheight.form-control(readonly="readonly" type="text",value="#{movie.codec_name}", placeholder="")
                h4.darkbule.col-sm-2.control-label(for="inputMVheight") Pixel Format
                .col-sm-3
                  input#inputMVheight.form-control(readonly="readonly" type="text",value="#{movie.pix_fmt}", placeholder="")
              .form-group.raw          
                h4.darkbule.col-sm-2.control-label(for="inputMVheight") Format
                .col-sm-3
                  input#inputMVheight.form-control(readonly="readonly" type="text",value="#{movie.format_name}", placeholder="")
              .form-group.raw  
                  h4.darkbule.col-sm-2.control-label(for="inputDescription") Description
                  .col-sm-3
                    textarea#inputDescription(name="movie[content]" style="width:800px;height:150px;") #{movie.content}
              .form-group
                h3.col-sm-offset-6
                  .col-sm-2
                    a.btn.btn-success(href="/movie/#{movie._id}") Present
                  .col-sm-2
                    button.btn.btn-success(type="submit" onclick="updateMovie()") Save
                  .col-sm-2
                    a.btn.btn-success(href="/gl/movie") Videos

          script(src="/js/setNetwork.js")


        