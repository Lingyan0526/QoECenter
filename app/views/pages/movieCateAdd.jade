              .form-group
                h3.col-sm-offset-1
                  .col-sm-1
                    button.btn.btn-success(type="button" onclick="addTr2('tabTISI', -1)") add
                  .col-sm-1
                    button.btn.btn-success(type="button" onclick="delTr2()") delete
                br
                .col-sm-offset-1.col-sm-10
                  table#tabTISI.table.table-hover.table-bordered
                    thead
                      tr
                        th(width="5%")
                          input#allCkb(type="checkbox")
                        th(width="20%") TI
                        th(width="20%") SI
                        th Edit
                        th Delete
                     tbody
                      tr
                        td
                          input(type='checkbox' name='ckb')
                        td(onclick="tdclick(this)") 0
                        td(onclick="tdclick(this)") 0
                        td: button.btn.btn-success.del(type="button",data-id="" onclick="save_para_table()") Edit
                        td: button.btn.btn-danger.del(type="button",data-id="" onclick="delLine(this)") Delete
